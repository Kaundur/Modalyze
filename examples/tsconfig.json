{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": ["src"]
}
